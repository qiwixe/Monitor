@using hybr.Shared.Services
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Мониторинг</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @foreach (var (_key, _value) in ValueSettings.Stations){
            <div class="nav-item px-3">
                <NavLink class="nav-link" href=@_value.Href>
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"/> @_value.ShortTitle
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Archive">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Архив
            </NavLink>
        </div>
    </nav>
</div>

