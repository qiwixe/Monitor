@page "/"

@using hybr.Shared.Services
<PageTitle>Home</PageTitle>
<Grid @ref=@UpdateGrid.AllUpdateGrid["Home"] TItem="Sensor" DataProvider="UpdateGrid.DataProvider">
    <Accordion>
        @foreach (var (_key,_value) in ValueSettings.Stations)
        {
            <AccordionItem>
                <TitleTemplate>
                    <Icon Color=@ValueSettings.Stations[_key].Alert Name=@ValueSettings.Stations[_key].Icon Class="me-1" /> @_value.FullTitle
                </TitleTemplate>
                <Content>
                    @foreach (var id in _value.SensorsId)
                    {
                        <Alert Color="@ValueSettings.Sensors[id].Alert"> <Icon Name="@ValueSettings.Sensors[id].Icon" class="me-2"></Icon>@ValueSettings.Sensors[id].Title @ValueSettings.Sensors[id].Value_of_m, @ValueSettings.Units[ValueSettings.Sensors[id].Unit_of_m].UnitShort</Alert>
                    }
                </Content>
            </AccordionItem>
        }
    </Accordion>
</Grid>


